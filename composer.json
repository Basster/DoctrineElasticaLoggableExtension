{
    "name": "basster/doctrine-elastica-loggable-extension",
    "description": "This library utilizes Gedmo Loggable Doctrine Extension to persist the entity changes into elasticsearch via elastica.io.",
    "type": "library",
    "require": {
        "php": ">=8.0",
        "doctrine/common": "^3.0",
        "gedmo/doctrine-extensions": "^2.4|^3.0",
        "ruflin/elastica": "^5.2.1|^6.0|^7.0"
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Basster\\ElasticaLoggable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Basster\\ElasticaLoggable\\": "tests"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "sort-packages": true
    }
}
